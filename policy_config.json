{
  "policies": [
    {
      "policy_id": "admin_storage",
      "expression": "(user_role:admin AND team:storage-team)",
      "match_rules": {
        "user_role": "admin",
        "team": "storage-team"
      }
    },
    {
      "policy_id": "devops_infra",
      "expression": "(user_role:devops AND team:infra-team)",
      "match_rules": {
        "user_role": "devops",
        "team": "infra-team"
      }
    },
    {
      "policy_id": "high_privilege",
      "expression": "(user_role:admin OR action_type:deploy)",
      "match_rules": {
        "OR": [
          {"user_role": "admin"},
          {"action_type": "deploy"}
        ]
      }
    }
  ],
  "epoch_duration_seconds": 60
}
